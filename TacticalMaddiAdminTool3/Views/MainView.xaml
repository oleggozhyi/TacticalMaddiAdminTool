<mahaps:MetroWindow x:Class="TacticalMaddiAdminTool.Views.MainView"
        xmlns:mahaps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit" Loaded="MainView_OnLoaded"
        Title="MADDI ADMIN TOOL (TACTICAL)" Height="500" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="Connection"/>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="Items"></ContentControl>
            <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1" Margin="5">
                <avalonedit:TextEditor   x:Name="txtCode" ShowLineNumbers="True"
                    FontFamily="Consolas" SyntaxHighlighting="xml"
                    FontSize="10pt"/>
            </Border>
        </Grid>
        
    </Grid>
</mahaps:MetroWindow>
